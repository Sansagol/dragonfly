@model Dragonfly.Models.AuthenticateModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Dragonfly - Authorization</title>
    <link rel="stylesheet" type="text/css" href="~/Content/ValidationFormsStyles.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/Data-styles.css" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <style>
        .btn {
            color: white;
        }
    </style>
</head>
<body>
    <div class="panel-success pag">
        <div class="panel-body col-md-12 column">
            @using (Html.BeginForm(
            "Authorization",
            "Main",
            FormMethod.Post,
            htmlAttributes: new { @class = "form-horizontal" }))
            {
                <div class="form-group  col-sm-offset-4">
                    @Html.ValidationSummary()
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-4">Login</label>
                    <div class="col-sm-4">
                        @Html.TextBoxFor(x => x.Login, new { @class = "form-control" })
                    </div>
                </div>
                <!--TODO change to crypto password-->
                <div class="form-group">
                    <label class="control-label col-sm-4">Password</label>
                    <div class="col-sm-4">
                        @Html.TextBoxFor(x => x.Password, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-1 col-sm-offset-3">
                        Keep login
                    </label>
                    @Html.CheckBoxFor(x => x.KeepLogin)
                </div>
                <div class="text-center">
                    <input class="btn btn-success"
                           type="submit" value="Login" />
                </div>
            }
        </div>
    </div>

</body>
</html>
